<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/popup_layout" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="File Details"
        android:textSize="24sp"
        android:textColor="@color/appDark"
        android:padding="10dp"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:id="@+id/fdName" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Size:"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:id="@+id/fdSize" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date:"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:id="@+id/fdDate" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="isOnGroups:"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:id="@+id/fdIsOnGroups" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:background="@drawable/submit_layout" />

</LinearLayout>