<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/popup_layout" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="File Details"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@color/appDark"
        android:padding="10dp"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/fdName" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Size:"
        android:textSize="16sp"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/fdSize" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date:"
        android:textSize="16sp"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/fdDate" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="isOnGroups:"
        android:textSize="16sp"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/fdIsOnGroups" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginBottom="10dp"
        android:paddingRight="5dp"
        android:weightSum="10">

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/submit_layout"
            android:src="@drawable/share"
            android:layout_margin="5dp"/>

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/submit_layout"
            android:src="@drawable/download"
            android:layout_margin="5dp"/>

    </LinearLayout>


</LinearLayout>